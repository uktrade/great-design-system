{% from "../header-bgs/_header-masthead-logo.njk" import greatMastheadLogo %}
{% macro greatBGSFooter(currentYear, upperFooterSection, lowerFooterSection) %}
    <footer id="footer"
        dir="ltr"
        data-ga-section="footer"
        class="great-ds-bgs-footer">
        <div class="great-ds-bgs-footer__container">
            <div class="great-ds-container">
                <div class='great-ds-footer__sections-container'>
                        <div class="great-ds-bgs-footer__section great-ds-bgs-footer__section--upper">
                            {% for footerSubSection in upperFooterSection %}
                                <div class="great-ds-bgs-footer__subsection great-ds-bgs-footer__subsection--upper">
                                    {% for link in footerSubSection %}     
                                        <ul class="great-ds-bgs-footer__link-list">
                                            <li class="great-ds-bgs-footer__link-list-item">
                                                <a class="great-ds-bgs-footer__link{% if link.isHeading %} great-ds-bgs-footer__link--heading {% endif %}"
                                                href="{{ link.href }}"
                                                title="{{ link.title }}"
                                                {% if link.target %} target="{{ link.target }}" {% endif %}
                                                {% if link.rel %} rel="{{ link.rel }}" {% endif %} >
                                                {{ link.text }}
                                                </a>
                                            </li>
                                        </ul>
                                    {% endfor %}
                                </div>
                            {% endfor %}
                            </div>
                            <div class="great-ds-bgs-footer__section great-ds-bgs-footer__section--lower">
                            {% for footerSubSection in lowerFooterSection %}
                                <div class="great-ds-bgs-footer__subsection great-ds-bgs-footer__subsection--lower">
                                    <ul class="great-ds-bgs-footer__link-list">
                                    {% for link in footerSubSection %}     
                                        <li class="great-ds-bgs-footer__link-list-item">
                                            <a class="great-ds-bgs-footer__link{% if link.isHeading %} great-ds-bgs-footer__link--heading {% endif %}"
                                            href="{{ link.href }}"
                                            title="{{ link.title }}"
                                            {% if link.target %} target="{{ link.target }}" {% endif %}
                                            {% if link.rel %} rel="{{ link.rel }}" {% endif %} >
                                            {{ link.text }}
                                            </a>
                                        </li>
                                    {% endfor %}
                                    </ul>
                                </div>
                            {% endfor %}
                            </div>
                        </div>
                </div>
            </div>
        </div>
        <div class="great-ds-bgs-footer__copyright-container">
            <div class="great-ds-container">     
                {{ greatMastheadLogo() }}
                <p class="great-ds-bgs-footer__copyright">Â© Crown copyright {{ currentYear }}. All rights reserved.</p>
            </div>
    </div>
    </footer>
{% endmacro %}