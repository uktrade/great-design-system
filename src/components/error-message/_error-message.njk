{% macro greatErrorMessage(id, classes, visuallyHiddenText, html, text, for) %}
<p {% if id %} id="{{ id }}"
  {% elif for %}
    id="{{ for }}-error"
  {% endif %} 
   class="govuk-error-message{% if classes %} {{ classes }}{% endif %}">
  {% if visuallyHiddenText %}
    <span class="govuk-visually-hidden">{% if visuallyHiddenText %}{{ visuallyHiddenText }}{% else %}Error{% endif %}:</span>
    {% if html %}{{ html|safe }}{% else %}{{ text }}{% endif %}
  {% else %}
    {% if html %}{{ html|safe }}{% else %}{{ text }}{% endif %}
  {% endif %}
</p>
{% endmacro %}