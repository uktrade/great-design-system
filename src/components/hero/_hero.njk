{% from "../action-link/_action-link.njk" import greatActionLink %}

{% macro greatHero(classes, svgImagePath, pngImagePath, pngImageAlt, caption, captionClass, heading, headingLevel, headingClass, aboveCtaText, aboveCtaHtml, aboveCtaClasses, belowCtaText, belowCtaHtml, belowCtaClasses, actionLinkText, actionLinkUrl, actionLinkClass) %}
    <div class="great-ds-hero{% if classes %} {{ classes }}{% endif %}">
        <div class="great-ds-hero__container">
            <div class="great-ds-hero__image-container">
                {% if svgImagePath %}
                    {% include svgImagePath %}
                {% elif pngImagePath %}
                    <img src="{{ pngImagePath }}" alt="{% if pngImageAlt %}{{ pngImageAlt }}{% else %}{% endif %}" class="great-ds-hero__image">
                {% endif %}
            </div>
            <div class="great-ds-hero__text-container">
                {% if caption %}
                    <p class="great-ds-hero__caption{% if captionClass %} {{ captionClass }}{% endif %}">{{ caption }}</p>
                {% endif %}
                
                {% if heading %}
                    <h{% if headingLevel %}{{ headingLevel }}{% else %}1{% endif %} class='great-ds-hero__heading{% if headingClass %} {{ headingClass }} {% endif %}'> {{ heading }} </h{% if headingLevel %}{{ headingLevel }}{% else %}1{% endif %}>
                {% endif %}

                {% if aboveCtaText %} 
                    <p class='great-ds-hero__description{% if aboveCtaClasses %} {{ aboveCtaClasses }} {% endif %}'> {{ aboveCtaText }} </p> 
                {% endif %}
                {% if aboveCtaHtml %} 
                    <div class='great-ds-hero__description{% if aboveCtaClasses %} {{ aboveCtaClasses }} {% endif %}'> {{ aboveCtaHtml|safe }} </div> 
                {% endif %}
                
                {% if actionLinkText and actionLinkUrl %}
                    <div class="great-ds-hero__action-link-container">
                        {{ greatActionLink(
                            linkText=actionLinkText,
                            linkHref=actionLinkUrl,
                            linkClass=actionLinkClass
                        ) }}
                    </div>
                {% endif %}

                {% if belowCtaText %} 
                    <p class='great-ds-hero__description{% if belowCtaClasses %} {{ belowCtaClasses }} {% endif %}'> {{ belowCtaText }} </p> 
                {% endif %}
                {% if belowCtaHtml %} 
                    <div class='great-ds-hero__description{% if belowCtaClasses %} {{ belowCtaClasses }} {% endif %}'> {{ belowCtaHtml|safe }} </div> 
                {% endif %}
            
            </div>
        </div>
    </div>
{% endmacro %}