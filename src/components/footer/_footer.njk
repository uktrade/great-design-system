{% macro greatFooter(params) %}
    <footer id="footer"
        dir="ltr"
        data-ga-section="footer">
        <div class="great-footer__footer">
            <ul class="great-footer__footer-link-list">
                {% for link in params.footerLinks %}     
                    <li>
                        <a href="{{ link.href }}"
                        title="{{ link.title }}"
                        {% if link.target %} target="{{ link.target }}" {% endif %}
                        {% if link.rel %} rel="{{ link.rel }}" {% endif %} >
                        {{ link.text }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
        <div class="great-footer__copyright-container">
            <div>
                {% include "./_footer-dbt-logo.njk" %}
                <p class="great-footer__copy-right">Â© Crown copyright {{ params.currentYear }}. All rights reserved.</p>
            </div>
        </div>
    </footer>
{% endmacro %}