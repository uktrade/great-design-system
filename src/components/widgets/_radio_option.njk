{% from "./_attrs.njk" import greatAttrsDjango %}

{% macro greatRadioOptionDjango(widget) %}

<input class="govuk-radios__input{% if widget.attrs.class %} {{ widget.attrs.class }}{% endif %}" type="radio" name="{{ widget.name }}"{% if widget.value != None %} value="{{ widget.value | string }}"{% endif %}

{{ greatAttrsDjango(
	attrs=widget.attrs
  ) }}

>

<label{% if widget.attrs.id %} id="{{ widget.attrs.id }}-label" for="{{ widget.attrs.id }}"{% endif %} class="govuk-label govuk-radios__label">
	{{ widget.label }}
</label>

{% if widget.help_text %}
<div class="govuk-hint {{widget.help_text_css}}">
	{{widget.help_text}}
</div>
{% endif %}
{% endmacro %}
