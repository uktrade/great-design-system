{% from "./_summary-list-link.njk" import greatSummaryListLink %}

{% macro greatSummaryListCardActions(card) %}
  {% if card.actions.items|length %}
    {% if card.actions.items|length == 1 %}
      <div class="govuk-summary-card__actions {% if card.actions.classes %}{{ card.actions.classes }}{% endif %}">
        {{ greatSummaryListLink(action=card.actions.items[0], cardTitle=card.title) }}
      </div>
    {% else %}
      <ul class="govuk-summary-card__actions {% if card.actions.classes %}{{ card.actions.classes }}{% endif %}">
        {% for action in card.actions.items %}
          <li class="govuk-summary-card__action">
            {{ greatSummaryListLink(action=action, cardTitle=card.title) }}
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  {% endif %}
{% endmacro %}
