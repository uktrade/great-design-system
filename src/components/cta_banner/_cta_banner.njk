{% from "../button/_button.njk" import greatButton %}
{% from "../responsive_image/_responsive_image.njk" import greatResponsiveImage %}

{% macro greatCtaBanner(backgroundClass, headingText, leadingText, listItems, ctaButtonText, signUpLink, loginUrl, landscapeImagePath, portraitImagePath) %}
    <div class="{% if backgroundClass %}{{ backgroundClass }}{% else %}great-ds-cta_banner--bg-light-blue{% endif %}">
        <div class="great-ds-container govuk-!-padding-top-7">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-half">
                    <h1 class="great-ds-cta_banner-heading">{{ headingText}}</h2>
                    {% if leadingText %}
                        <p class="great-ds-cta_banner-leading-text">{{ leadingText }}</p>
                    {% endif %}
                    {% if listItems %}
                        <ul class="great-ds-cta_banner__tick-list govuk-!-margin-bottom-5">
                            {% for item in listItems %}
                                <li class="great-ds-cta_banner__tick-list-item"> {{ item }} </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                    {{ greatButton(text = "Sign up to get started", href = "#", cta = true) }}
                    {% if signUpLink %} 
                        <p class="great-ds-cta_banner-signup-link-text govuk-!-margin-bottom-9">
                            {{ signUpLink.preLinkText }} <a href="{{ signUpLink.href }}" class="great-ds-cta_banner-signup-link govuk-link govuk-link--no-visited-state">{{ signUpLink.linkText }}</a>
                        </p>
                    {% endif %}
                </div>
                <div class="govuk-grid-column-one-half">
                    {{ greatResponsiveImage(
                        image_src = landscapeImagePath,
                        xs_image_src = landscapeImagePath,
                        s_image_src = landscapeImagePath,
                        m_image_src = portraitImagePath,
                        l_image_src = portraitImagePath,
                        xl_image_src = landscapeImagePath,
                        alt_text = 'Lady with pancakes'
                    )
                    }}
                </div>
            </div>
        </div>
    </div>
{% endmacro %}