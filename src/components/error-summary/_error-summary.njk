{% macro greatErrorSummaryDjango(errors, disable_auto_focus, title, description, id) %}

<div class="govuk-error-summary {% if errors.classes %} {{ errors.classes }}{% endif %} {% if errors|length == 0 %}great-hidden{% endif %}"
  {% if disable_auto_focus %}data-disable-auto-focus="{{ disable_auto_focus }}"{% endif %}
  {% if id %} id="{{id}}" {% endif %}
  data-module="govuk-error-summary">
  <div role="alert">
    {% if title %}
    <h2 class="govuk-error-summary__title">
      {{title}}
    </h2>
    {% endif %}
    <div class="govuk-error-summary__body">
      {% if description %}
        <p>
          {{description}}
        </p>
      {% endif %}
      <ul class="govuk-list govuk-error-summary__list">
        {% for field, error in errors %}
        <li>
          <a href="#id_{{field}}-container" class='great-ds-error-summary__link'>
            {{error}}
          </a>
        </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
{% endmacro %}