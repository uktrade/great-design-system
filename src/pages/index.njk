{% extends "layout/_base.njk" %}
{% from "../components/hero/_hero.njk" import greatHero %}
{% block title %}Great Design System - Home Page{% endblock %}

{% block content_wrapper %}
    <section>
        {{ greatHero( 
            heroClasses = 'great-ds-hero--large-image-scaling great-ds-hero--bg-dark-blue',
            heroHeading = 'Design your service using great.gov.uk styles, components and patterns',
            heroDescription = 'Use this Design System to make great.gov.uk services consistent. Learn from the research and experience of other service teams and avoid repeating work that’s already been done. .',
            svgImagePath = '../hero/_doc_hero_image.njk',
            headingClass = 'great-ds-hero__heading--white',
            descriptionClass = 'great-ds-hero__description--white',
            actionLinkText = 'Get started',
            actionLinkUrl = '#',
            actionLinkClass = 'great-ds-action-link--white-dark-blue-arrow'
        ) }}
        <div class='great-ds-container govuk-!-padding-top-8 govuk-!-padding-bottom-8'>
            <div class="govuk-grid-row ">
                <div class="govuk-grid-column-one-third">
                    <h2>Styles</h2>
                    <p>Make government services consistent across great.gov.uk with guides for applying layout, typography, colour and images.</p>
                    <a class='govuk-link' href=''>View styles</a>
                </div>
                <div class="govuk-grid-column-one-third great-ds-mobile-only-margin-top-8">
                    <h2>Components</h2>
                    <p>Save time with reusable, accessible components for forms, navigation, panels, tables and more.</p>
                    <a class='govuk-link' href='/components/'>View components</a>
                </div>
                <div class="govuk-grid-column-one-third great-ds-mobile-only-margin-top-8">
                    <h2>Patterns</h2>
                    <p>Help users complete common tasks like entering names and addresses, filling in forms and creating accounts.</p>
                    <a class='govuk-link' href=''>View patterns</a>
                </div>
            </div>

            <div class="great-ds-light-grey-divider govuk-!-margin-bottom-8 govuk-!-margin-top-8"></div>

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third great-ds-mobile-only-margin-top-8">
                    <h2>Content</h2>
                    <p>Make your content consistent across all Great services using our style guides.</p>
                    <a class='govuk-link' href=''>View content guidance</a>
                </div>
                <div class="govuk-grid-column-one-third great-ds-mobile-only-margin-top-8">
                    <h2>Community</h2>
                    <p>Contribute to the Design System by proposing new components or patterns and sharing your ideas in our community.</p>
                    <a class='govuk-link' href=''>View community</a>
                </div>
                <div class="govuk-grid-column-one-third great-ds-mobile-only-margin-top-8">
                    <h2>Accessibility</h2>
                    <p>Our accessibility strategy outlines our principles and work to improve accessibility within the Design System.</p>
                    <a class='govuk-link' href=''>View accessibility</a>
                </div>
            </div>

            <div class="great-ds-light-grey-divider govuk-!-margin-bottom-8 govuk-!-margin-top-8"></div>

            <div class="govuk-grid-row govuk-!-padding-bottom-8">
                <div class="govuk-grid-column-one-third great-ds-mobile-only-margin-top-8">
                    <h2>Updates</h2>
                    <p>Find out about our latest releases as well as planned work.</p>
                    <a class='govuk-link' href=''>View updates</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}