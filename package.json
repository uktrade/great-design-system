{
  "name": "@uktrade/great-design-system",
  "author": "Matt Simon",
  "version": "0.0.34",
  "description": "",
  "engines": {
    "node": "^20.9.0",
    "npm": "^10.1.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "dev": "npm run clean && npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:webpack": "webpack --watch --mode development",
    "build": "npm run clean && npm-run-all build:*",
    "build:site": "eleventy",
    "build:webpack": "webpack",
    "build:webpack:package": "PACKAGE_BUILD=true webpack",
    "build:components": "node ./src/lib/copy-components.mjs",
    "build:scss": "node ./src/lib/copy-core-scss.mjs",
    "figma:token-fetch": "node ./src/lib/figma/fetch-figma-tokens.mjs",
    "npm:package": "npm run clean && npm run build:webpack:package && npm run build:components && npm run build:scss",
    "clean": "rm -rf ./dist",
    "test": "jest",
    "lint:js": "eslint 'src/**/*.js'",
    "lint:scss": "stylelint 'src/**/*.scss'"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "keywords": [],
  "dependencies": {
    "govuk-frontend": "^5.4.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/preset-env": "^7.25.4",
    "ajv": "^8.16.0",
    "axios": "^1.7.2",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.5",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "diff": "^5.2.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "glob": "^7.1.6",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.8.1",
    "npm-run-all": "^4.1.5",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.72.0",
    "sass-loader": "^14.1.1",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
